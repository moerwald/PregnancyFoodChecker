<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="tbDefaultStyle">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="tbHeaderStyle" BasedOn="{StaticResource tbDefaultStyle}">
        <Setter Property="FontSize" Value="32"/>
    </Style>

    <Thickness x:Key="defaultMargin">
        <Thickness.Left>10</Thickness.Left>
        <Thickness.Top>5</Thickness.Top>
        <Thickness.Right>10</Thickness.Right>
        <Thickness.Bottom>5</Thickness.Bottom>
    </Thickness>

    <SolidColorBrush x:Key="purpleColor" Color="#732673"/>

</ResourceDictionary>